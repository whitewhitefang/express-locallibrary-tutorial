extends layout

block content
    h1= title

    ul
        each author in author_list
            li
                a(href=author.url) #{author.name}&#32
                | (#{author.date_of_birth ? author.date_of_birth_formatted : " ... "} - #{author.date_of_death ? author.date_of_death_formatted : " ... "})
        else
            li There are no authors